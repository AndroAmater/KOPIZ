.form-group#form-text-color
  = bootstrap_form_for @project_phase, remote: true, url: { action: "create"} do |f|
    = f.text_field :name
    = f.text_area :description
    = collection_select( :project_phase, :project_id, ::Project.all, :id, :name, {}, { :multiple => false } )
    %br
    = f.submit "Create"
%button.close-form-btn.btn.btn-primary Back

:javascript
  $(document).ready( function() {
    $(".close-form-btn").click( function() {
      $('#task-form').slideUp(250);
      $("#form-title").delay(250).slideUp(50);
      $(".nav-list").delay(300).slideDown(100);
      $("#new_link").delay(400).slideDown(50);
    });
  });
