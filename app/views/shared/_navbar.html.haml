.col-md-3.navigation-bar.text-center.overflow-scroll
  .container.nav-container
    %ul.nav-list.float-center
      %li.nav-item
        %a{:href => "/tasks"} Tasks
      %li.nav-item
        %a{:href => "/projects"} Projects
      %li.nav-item
        %a{:href => "/project_phases"} Project Phases
      %li.nav-item
        %a{:href => "#"} Lorem
      %li.nav-item
        %a{:href => "#"} Ipsum
      %li.nav-item
        %a{:href => "#"} Dolor
  - if controller.controller_name == "tasks"
    %h3#form-title.nav-text-color{:style => "display: none"} New Task
  - elsif controller.controller_name == "projects"
    %h3#form-title.nav-text-color{:style => "display: none"} New Project
  - elsif controller.controller_name == "project_phases"
    %h3#form-title.nav-text-color{:style => "display: none"} New Project Phase
  #task-form{:style => "display:none;"}
  .nav-item#bottom-of-page.new-task-button
    - if controller.controller_name == "tasks"
      = link_to "New Task", new_task_path, id: "new_link", remote: true
    - elsif controller.controller_name == "projects"
      = link_to "New Project", new_project_path, id: "new_link", remote: true
    - elsif controller.controller_name == "project_phases"
      = link_to "New Project Phase", new_project_phase_path, id: "new_link", remote: true
